        <div id="cases">
            <ul id="case-container">
            {{#each cases}}
                <li>
                    <div class="row case">
                        <div class="caseHead">
                            <h2>Case No:   {{dataValues.id}}</h2>
                            <h3>{{dataValues.disaster_type}}</h3>
                            <p>Location Type: {{dataValues.location_type}}</p>
                        </div>
                        <div class="details">
                            <p class="sos-location" data-location="{{dataValues.geolocation}}">{{dataValues.geolocation}}</p>
                            <p>Number Of People: {{dataValues.number_affected}}</p>
                            <p>Demogrphy: {{dataValues.demographic}}.</p>
                            <p>Item Needed: {{dataValues.items_needed}}.</p>
                        </div>
                    </div>
                </li>
            {{/each}}
            </ul>
        </div>

